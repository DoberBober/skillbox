mixin head(title)
	- var default_title = 'title'
	if title
		- var default_title = title

	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=Edge")
		meta(name="viewport" content="width=device-width,initial-scale=1")
		title !{default_title}
		//-
		link(href="css/styles.css" rel="stylesheet")
